- content_for :pre_mobile_load do
  %script(type='text/javascript')
    $(document).bind("mobileinit", function(){
    $.extend($.mobile, { ajaxFormsEnabled: false });
    });

- content_for :toolbar do
  %h1 Sign Up
  = link_to 'Home', root_path, class: 'ui-btn-right', 'data-icon' => 'home', rel: 'external'

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.email_field :email, placeholder: 'Email'
  .field
    = f.password_field :password, placeholder: 'Password'
  .field
    = f.password_field :password_confirmation, placeholder: 'Password confirmation'
  .field
    = f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :default => "Eastern Time (US & Canada)"
  .actions
    = f.submit "Sign up"
