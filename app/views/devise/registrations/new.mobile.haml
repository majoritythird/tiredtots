- content_for :title do
  Sign Up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %ul.form
    %li= f.text_field :email, :placeholder => 'Email'
    %li= f.password_field :password, :placeholder => 'Password'
    %li= f.password_field :password_confirmation, :placeholder => 'Password confirmation'
    %li= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :default => "Eastern Time (US & Canada)"
    %li= f.submit "Sign up", :class => "submit"
