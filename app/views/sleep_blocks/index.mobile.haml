- content_for :toolbar do
  = link_to "Back", root_path, class: 'back button', rel: 'external'
  %h1= child.name
  = link_to "+", new_child_sleep_block_path(child), class: 'add slideup button', rel: 'external'

- if recent_sleep_blocks.any?
  %ul
    - recent_sleep_blocks.each do |block|
      %li.arrow= link_to block.to_s, edit_child_sleep_block_path(child, block)
