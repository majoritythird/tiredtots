= form_for [child, sleep_block] do |f|
  - if sleep_block.errors.any?
    %ul.errors
      - sleep_block.errors.full_messages.each do |error_message|
        %li= error_message
  = f.label :start_string
  = f.text_field :start_string
  = f.label :finish
  = f.text_field :finish, :value => sleep_block.finish.try(:to_s, :brief)
  = f.submit "save"
