%h1
  Sleep journal for
  = child.name

- if sleep_blocks.any?
  %ul.sleep_blocks
    - sleep_blocks.each do |sleep_block|
      %li
        Start: #{sleep_block.start.to_s(:brief)}
        - if sleep_block.finish.nil?
          Finish: (not yet finished)
        - else
          Finish: #{sleep_block.finish.to_s(:brief)}
        = link_to "edit", edit_child_sleep_block_path(child, sleep_block)

- if child.unfinished_sleep_block?
  %h2 Open sleep block
- else
  %h2 New sleep block
= render :partial => 'form'
